#include <bits/stdc++.h> 
int minimumPathSum(vector<vector<int>>& triangle, int n){
	
	vector<vector<int>>dp(n,vector<int>(n,1e9)); 
	
	for(int i=0; i<n; i++)
	{
		for(int j=0; j<=i; j++)
		{
			if(i==0 && j==0)dp[i][j]=triangle[i][j]; 
			else{
				int up=1e9,dig=1e9; 
				if(i>0 && j!=i)up=triangle[i][j]+dp[i-1][j]; 
				if(i>0 && j>0 )dig=triangle[i][j]+dp[i-1][j-1]; 
				dp[i][j]=min(up,dig); 
			}
		}
	}

	int ret=1e9; 
	for(int i=0; i<n; i++){
       ret=min(ret,dp[n-1][i]); 
	} 
	return ret; 

}
//https://www.naukri.com/code360/problems/triangle_1229398
