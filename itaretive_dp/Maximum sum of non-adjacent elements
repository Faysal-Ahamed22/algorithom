#include <bits/stdc++.h> 


int maximumNonAdjacentSum(vector<int> &nums){
    int n=nums.size(); 
    vector<int>dp(n+4); 
    dp[0]=nums[0]; 

    for(int i=1; i<n; i++)
    {
        int not_take=0+dp[i-1]; 
        int take=0; 
        if(i-2>=0 || i-2==-1)take=dp[i-2]+nums[i]; 
         dp[i]=max(take,not_take); 
    }
    return dp[n-1]; 
    
}
