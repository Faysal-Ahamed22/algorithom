
#include<bits/stdc++.h>

bool canPartition(vector<int> &arr, int n)
{
	int sum=0; 
	for(int i=0; i<n; i++)sum+=arr[i]; 
	if(sum&1)return false; 
	int t=sum/2; 
	vector<vector<bool>>dp(n,vector<bool>(t+1,false)); 
	for(int i=0; i<n; i++)dp[i][0]=true; 
	dp[0][arr[0]]=1; 

	for(int i=1; i<n; i++)
	{
		for(int j=1; j<=t; j++)
		{
			bool nt=dp[i-1][j]; 
			bool tk=0; 
			if(arr[i]<=j)tk=dp[i-1][j-arr[i]]; 
			dp[i][j]=(nt|tk); 
		}
	}
	return dp[n-1][t]; 
}

//https://www.naukri.com/code360/problems/partition-equal-subset-sum_892980
