#include<bits/stdc++.h>

int editDistance(string str1, string str2)
{
    int n=str1.size(); 
    int m=str2.size(); 

    
    vector<int>prev(m+1,0),cur(m+1,0);  
    for(int j=0; j<=m; j++)prev[j]=j; 

    for(int i=1; i<=n; i++)
    {
        cur[0]=i;
        for(int j=1; j<=m; j++)
        {
            if(str1[i-1]==str2[j-1])cur[j]=prev[j-1]; 
            else{
                int v1=1+cur[j-1]; 
                int v2=1+prev[j]; 
                int v3=1+prev[j-1]; 
                cur[j]=min({v1,v2,v3}); 
            }
        }
        prev=cur; 

    }

    return prev[m]; 
}

//https://www.naukri.com/code360/problems/edit-distance_630420?leftPanelTabValue=PROBLEM
